<h1>Courses</h1>

{{#if courses.length}}
    <div class="row">
    {{#each courses }}
        <div class="col s3">
            <div class="card">
                <div class="card-image avatar">
                    <img src="{{img}}" alt="{{title}}" class="avatar-img">
                </div>
                <div class="card-content">
                    <span class="card-title">{{title}}</span>
                    <p class="price">{{price}}</p>
                </div>
                <div class="card-action">
                    <a href="/courses/{{id}}" target="_blank">Details</a>
                    <a href="/courses/{{id}}/edit?allow=true">
                        <i class="large material-icons mr-1 edit-icon">border_color</i>
                        Edit
                    </a>
                    <form class="mt-2" action="/cart/add" method="POST">
                        <button class="btn tn-primary w-100">
                            <input type="hidden" name="id" value="{{id}}">
                            <i class="large material-icons mr-1 edit-icon">add_shopping_cart</i>
                            BUY COURSE
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
    </div>
{{else}}
    <p>There are not courses yet</p>
{{/if}}
