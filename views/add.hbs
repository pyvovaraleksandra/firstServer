<h1>Add Course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" placeholder="Enter course name" type="text" class="validate" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter name" />
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter price" />
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Avatar URL</label>
        <span class="helper-text" data-error="Enter url" />
    </div>

    <button class="btn btn-primary" type="submit">
        Create course
    </button>
</form>
